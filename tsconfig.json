{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}